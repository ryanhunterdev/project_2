<h2 class="new-track-heading">upload track</h2>
<div class="new-track-wrapper">
    <form action="/tracks" method="post" enctype="multipart/form-data" class="new-track-form"> 

        <!-- hidden inputs -->
        <input type="hidden" name="user_id" value="<%= session[:user_id] %>">
        <input type="hidden" name="track_publisher_name" value="<%= session[:user_name] %>">

        <!-- user inputs -->
        <div class="input-wrap">
            <label for="track_name">track name:</label>
            <input type="text" name="track_name" class="normal-input">
        </div>

        <div class="input-wrap">
            <label for="genre">genre:</label>
            <input type="text" name="genre" class="normal-input"> 
        </div>

        <div class="input-wrap">
            <label for="track_audio">upload audio:</label>
            <input type="file" name="track_audio" class="normal-input" required>
        </div>

        <div class="input-wrap">
            <label for="track_img">upload artwork</label>
            <input type="file" name="track_img" class="normal_input" required>
        </div>

        <div class="input-wrap">   
            <label for="track_info">track info:</label>
            <input type="text" name="track_info" class="normal-input">
        </div>

        <div class="input-wrap">
            <label for="purchase_link">buy link:</label>
            <input type="text" name="purchase_link" class="normal-input">
        </div>
        
        <div class="button-container">
            <button class="share-track-btn">share track</button>
        </div>

    </form>
</div>



