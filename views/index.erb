<div class="index-wrapper">

    <section class="index-tracks-feed">

    <h2 class="index-feed-heading">track feed:</h2>

        <div class="index-feed-grid">
            <% tracks.each do |track| %>

                <div class="index-tracks-container">

                    <div class="tracks-image-container">

                        <a href="/tracks/<%= track["id"] %>">
                            <img src="<%= track["track_img"]%>" alt="image" class="feed-track-img">
                        </a>
                    </div>

                    <div class="tracks-info-container">

                        <a href="/tracks/<%= track["id"] %>"> 
                        <%= track["track_name"] %>
                        </a>
                        <p> 
                            by <a href="/users/<%= track["user_id"] %>">
                            <%= track["track_publisher_name"] %>
                            </a>
                        </p>   
                    
                    </div>
                        
                </div>

            <% end %>
        </div>    
    </section>

